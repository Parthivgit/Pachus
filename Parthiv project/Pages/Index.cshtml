@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="page-container">
    <img src="~/Icons/Screenshot 2023-04-02 015854.png" />
    <div class="signin">
        <img src="~/Icons/signin-logo.png" />
    </div>

    <div class="search-box">
        <div class="custom-div">
            <img src="~/Icons/magnifying-glass.svg" />
