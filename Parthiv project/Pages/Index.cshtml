                <img src="~/Icons/youtube-logo.png" />
            </div>
            <p>
                Channel pages
            </p>
        </a>

        <a href="/Store" class="page-button">
            <div class="img-container">
                <img src="~/Icons/shopping-cart-logo.png" />
            </div>
            <p>
                Store
            </p>
        </a>

        <a href="/Chat" class="page-button">
            <div class="img-container">
                <img src="~/Icons/Chat-logo.png" />
            </div>
            <p>
                Chat
            </p>
        </a>
    </div>
